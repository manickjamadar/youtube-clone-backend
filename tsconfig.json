{
  "compilerOptions": {
    "target": "ES2020",                       // Modern target for async/await and other features
    "module": "commonjs",                     // Module system for Node.js
    "lib": ["ES2020"],                        // Include modern libraries
    "allowJs": false,                         // Do not allow JavaScript files to be compiled
    "outDir": "./dist",                       // Output directory for compiled files
    "rootDir": "./src",                       // Root directory of your source files
    "strict": true,                           // Enable all strict type-checking options
    "moduleResolution": "node",               // Use Node.js module resolution
    "esModuleInterop": true,                  // Enable compatibility with CommonJS and ES Modules
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names are case-consistent
    "resolveJsonModule": true,                // Allow importing JSON files
    "noImplicitAny": true,                    // Disallow implicit any types
    "strictNullChecks": true,                 // Enable strict null checks
    "strictFunctionTypes": true,              // Enable strict function type checking
    "strictBindCallApply": true,              // Check for type safety in bind/call/apply methods
    "noImplicitThis": true,                   // Disallow this of type any
    "noUnusedLocals": false,                   // Report unused local variables
    "noUnusedParameters": false,               // Report unused parameters
    "noFallthroughCasesInSwitch": true,       // Report fallthrough cases in switch statements
    "noImplicitReturns": true,                // Report lack of return at end of functions
    "incremental": true,                      // Enable incremental compilation for faster builds
    "tsBuildInfoFile": "./dist/.tsbuildinfo"  // Store incremental build information
  },
  "include": ["src"],                         // Include all TypeScript files in src directory
  "exclude": ["node_modules", "dist"],        // Exclude node_modules and dist directories
  "typeRoots": ["./src/types","./node_modules/@types", ]  // Add your custom type definitions
}
